// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Stage1Pending {
  username   String
  hostedLink String
  email      String   @id @unique
  updatedAt  DateTime @default(now()) @updatedAt
}

model Stage1User {
  username   String   @id @unique
  hostedLink String
  email      String   @unique
  grade      Int      @default(0)
  updatedAt  DateTime @default(now())
  promoted   Boolean  @default(false)
}

model Stage1UserFailed {
  username   String   @id @unique
  hostedLink String
  email      String   @unique
  grade      Int      @default(0)
  updatedAt  DateTime @default(now()) @updatedAt
}

model Stage2Pending {
  username   String
  hostedLink String
  email      String   @id @unique
  updatedAt  DateTime @default(now())
}

model Stage2User {
  username   String
  hostedLink String
  email      String   @unique
  grade      Int      @default(0)
  updatedAt  DateTime @default(now())
  promoted   Boolean  @default(false)
}

model Stage2UserFailed {
  username   String
  hostedLink String
  email      String   @unique
  grade      Int      @default(0)
  updatedAt  DateTime @default(now())
}
